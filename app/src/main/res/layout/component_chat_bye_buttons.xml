<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/component_chat_bye_buttons_button_bye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_gap_between_components"
        style="@style/Widget.Material3.Button"
        app:icon="@drawable/ic_bye"
        android:text="@string/component_chat_bye_buttons_button_bye_caption"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/component_chat_bye_buttons_button_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.TonalButton"
        android:text="@string/component_chat_bye_buttons_button_restart_caption"/>

</LinearLayout>