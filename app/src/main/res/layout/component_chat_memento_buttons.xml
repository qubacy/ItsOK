<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/component_chat_memento_buttons_button_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_gap_between_components"
        style="@style/Widget.Material3.Button"
        android:text="@string/component_chat_memento_buttons_button_positive_caption"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/component_chat_memento_buttons_button_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.TonalButton"
        android:text="@string/component_chat_memento_buttons_button_negative_caption"/>

</LinearLayout>